export PATH := ./node_modules/.bin:../node_modules/.bin:$(PATH)
.PHONY: install test clean

test:
	@if [ -d "test" ]; then tape --harmony $(TAP_PARAMS) test/??_*.js | tap-diff else true; fi;

release:
	npm version patch
	git add package.json
	git commit
	git push
	npm publish .

clean:
	@rm -rf node_modules
